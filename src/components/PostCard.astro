---
const { slug, image, title, desc, date } = Astro.props;
---

<div class="!my-[20px]">
  <a
    href={`/blog/${slug}`}
    class="text-gray-900 font-medium self-start hover:underline-offset-2 hover:decoration-2 flex flex-col gap-6 rounded-10 text-secondary-txt transition overflow-hidden transform group/post min-[768px]:flex-row hover:outline-offset-0 hover:bg-[rgba(var(--post-color)/0.07)] hover:no-underline hover:text-primary-txt dark:hover:bg-[rgba(var(--post-color)/0.14)]"
  >
    <div
      class="aspect-[2/1] h-auto rounded-lg min-[768px]:mt-2 min-[768px]:min-h-full min-[768px]:aspect-[5/3] min-[768px]:max-w-[180px] min-[768px]:min-w-[180px] z-[10px] bg-[#f1f1f1] dark:bg-[#1a1a1a] bg-center bg-cover"
      style={{ backgroundImage: `url(${image})` }}
    >
    </div>
    <div class="flex flex-col gap-[4px] flex-1 min-[768px]:self-center">
      <p
        class="text-[18px] font-bold font-manrope text-primary-txt transition group-hocus !my-[10px]"
      >
        {title}
      </p>
      <p
        class="text-[14px] text-secondary-txt overflow-ellipsis line-clamp-3 min-h-[43px] !my-[4px]"
      >
        {desc}
      </p>
      <div
        class="flex items-center gap-x-3 gap-y-1 mt-1 text-tertiary-txt text-[14px] flex-wrap mb-3"
      >
        <span
          class="inline-flex items-center justify-center h-full py-[3px] px-[6px] min-h-[1.75rem] min-w-[45px] gap-6 rounded-[3px] text-[13px] transition bg-zinc-100/70 dark:bg-zinc-800"
        >
          {date}
        </span>

        <!-- {
          category && (
            <span class="inline-flex items-center justify-center h-full py-[3px] px-[6px] min-h-[1.75rem] min-w-[45px] gap-6 rounded-[3px] text-[13px] transition bg-zinc-100/70 dark:bg-zinc-800">
              {category}
            </span>
          )
        } -->
      </div>
    </div>
  </a>
</div>
